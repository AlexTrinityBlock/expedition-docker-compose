{
  "compilerOptions": {
    "module": "esnext",
    "jsx": "preserve",
    "target": "es5",
    "outDir": "build/tsc_output",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "scripthost"
    ],
    "sourceMap": true,
    "alwaysStrict": false,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src",
    "webpack.config.ts"
  ]
}
